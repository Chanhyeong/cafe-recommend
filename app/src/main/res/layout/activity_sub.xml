<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg">
    tools:context="com.database.caferecommend.SubActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카페 이름"
        android:textColor="#000"
        android:id="@+id/cafeName"
        android:textSize="15pt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
            <ImageView
                android:layout_width="63dp"
                android:layout_height="141dp"
                android:scaleType="centerInside"
                android:src="@drawable/angel_icon"
                android:id="@+id/cafeImage"
                android:layout_weight="0.71" />

            <RatingBar
                android:id="@+id/cafeRatingBar"
                android:layout_weight="0.71"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:layout_marginLeft="10pt"
                android:numStars="5"
                android:stepSize="0.5"
                android:isIndicator="true"/>

    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="9pt"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:text="전화번호 "/>

                <TextView
                    android:id="@+id/call"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:textSize="9pt"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30pt"
                    android:text="여기다 전화 번호"/>
            </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="9pt"
            android:textColor="#000"
            android:scrollbars="horizontal"
            android:layout_height="20dp"
            android:text="주소"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43pt"
            android:textColor="#000"
            android:textSize="9pt"
            android:text="여기다 주소"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:textSize="9pt"
            android:layout_height="wrap_content"
            android:text="오픈시간 "/>

        <TextView
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9pt"
            android:layout_marginLeft="30pt"
            android:textColor="#000"
            android:text="여기다 오픈시간"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="9pt"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="마감시간 "/>

        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="9pt"
            android:layout_marginLeft="30pt"
            android:text="여기다 마감시간"/>
    </LinearLayout>

    <ListView
        android:layout_marginTop="15pt"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/menuList"><!--메뉴-->
    </ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cafe Review"
            android:id="@+id/revBtn"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴추가"
            android:id="@+id/appendMenu"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카페수정"
            android:id="@+id/modificationCafe"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카페삭제"
            android:id="@+id/deleteCafe"/>

    </LinearLayout>

</LinearLayout>
